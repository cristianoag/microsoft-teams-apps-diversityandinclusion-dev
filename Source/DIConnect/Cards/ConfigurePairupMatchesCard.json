{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "text": "${configureMatchesCardTitle}",
      "spacing": "Medium",
      "weight": "Bolder",
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "id": "Configure matches",
      "title": "${configureMatchesButtonText}",
      "data": {
        "command": "${configureMatchesCommand}"
      }
    }
  ]
}